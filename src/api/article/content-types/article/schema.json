{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Content Pages",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "unique": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "breadcrumbs": {
      "type": "dynamiczone",
      "components": [
        "shared.service-page"
      ]
    },
    "whoisthisfor": {
      "type": "richtext"
    },
    "onthispage": {
      "displayName": "Text",
      "type": "component",
      "repeatable": true,
      "component": "shared.text"
    },
    "relatedpages": {
      "type": "component",
      "repeatable": true,
      "component": "shared.article"
    }
  }
}
